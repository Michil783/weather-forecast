} else if (icon=="03d") {
	currentIcon = icon03d
} else if (icon=="03n") {
	currentIcon = icon03n
} else if (icon=="04d") {
	currentIcon = icon04d
} else if (icon=="04n") {
	currentIcon = icon04n
} else if (icon=="10d") {
	currentIcon = icon10d
} else if (icon=="10n") {
	currentIcon = icon10n
} else if (icon=="11d") {
	currentIcon = icon11d
} else if (icon=="11n") {
